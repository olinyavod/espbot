<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="espbot.ui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModules="using:espbot.ui.ViewModules"
    xmlns:pages="using:espbot.ui.Pages"
    xmlns:ui="using:espbot.ui"
    x:DataType="{x:Type viewModules:ShellViewModel}"
    FlyoutIsPresented="{Binding FlyoutIsPresented}"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="espbot"
        Route="HomeViewModel" 
        ContentTemplate="{ui:PageTemplate {x:Type pages:HomePage}}">
    </ShellContent>

</Shell>
